# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here
ADMIN_USER_ID=your_admin_user_id_here

# Browser Settings
HEADLESS=1
NAVIGATION_TIMEOUT=30000
BROWSER_SLOWMO=0

# Enhanced Browser Features (Turnstile-Solver Integration)
USE_ENHANCED_BROWSER=1
PREFERRED_BROWSER_TYPE=chromium
ENABLE_TURNSTILE_SERVICE=1

# Turnstile Service Configuration
TURNSTILE_SERVICE_HOST=127.0.0.1
TURNSTILE_SERVICE_PORT=5000
TURNSTILE_SERVICE_THREADS=2
TURNSTILE_TIMEOUT=60

# Debug Settings
FORCE_NO_PROXY=0
DEBUG_ENHANCED_FEATURES=0

# Browser Types Available:
# - chromium (default, good balance)
# - chrome (if installed)
# - msedge (if installed)
# - camoufox (maximum stealth, requires installation)

# Notes:
# - Set USE_ENHANCED_BROWSER=1 to use patchright/camoufox for better stealth
# - Set ENABLE_TURNSTILE_SERVICE=1 to start the Turnstile API service
# - Set DEBUG_ENHANCED_FEATURES=1 for detailed logging during development
# - camoufox provides the best stealth but requires: python -m camoufox fetch